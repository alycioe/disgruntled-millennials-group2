    <!-- Title of site/logged in profile information goes here -->

        <nav class="navbar custom_colorBG">

            <h2 class="title is-2" > MilBook </h2>


        </nav>

        <section class=" is-flex is-flex-direction-row  mt-4 mx-2 custom_colorBD"	>

         <div class="card is-flex-grow-1 m-2 custom_colorBG">
                
                <div class="card-content is-flex-direction-column" id = "Name">

                    Name: {{User}}

                </div>

                <!-- Add an empty image space as a placeholder -->
                <div class="card-content is-flex-direction-column" id="ProfilePicturePlaceholder">
                    <img src="profile_picture.jpg" alt="Empty Image" width="100" height="100">
                </div>

                <div class="card-content is-flex-direction-column" id = "Animal">

                    Animal: Dog

                </div>

            </div>


        <!-- Where posts are displayed -->

            <section class="is-flex-grow-5">

            {{#each posts as |Posts|}}
            
            <div class="card custom_colorBG mx-4 my-1">

                <div class="card-content">

                    <!-- Posts displayed here -->

                    <p>{{Posts.userName}} : {{Posts.text}}</p>
                    
                </div>
                
            </div>

            {{/each}}

            <!-- Make a post area -->

            <div class=" mx-4 my-4 is-flex is-flex-direction-row is-align-items-center">

                <!-- Make a post! section, for adding text, image, links, etc -->


                    <input class="input is-rounded custom_colorBD p-3" type="text" placeholder="Type your post here!" id = "TextBox">

                    


                    <button class="button is-rounded custom_colorBG p-3" id="postButton">
                        <span class="icon is-small">
                            <i class="fa-solid fa-paper-plane "></i>
                        </span>
                        <span>Post</span>
                    </button>

                    <form action="/create-image-post" method="POST" enctype="multipart/form-data">
                        <input type="file" name="image" id="image" accept="image/*">
                    </form>

            </div>
                    
                    

            </section>

    </section>

     <script src="./js/post.js"></script>